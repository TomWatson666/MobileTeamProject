<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@mipmap/gem_hunt_logo"
        android:alpha=".15"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:baselineAligned="false"
        android:animateLayoutChanges="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:id="@+id/student_progress_tracker_container">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:id="@+id/team_tracker_teams_container">

            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/team_tracker_teams"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                class="team5project.treasurehuntapp.TeamTrackerTeamsFragment"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="#B5122B"
            android:id="@+id/team_tracker_button_panel">

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
